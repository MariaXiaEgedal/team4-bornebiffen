---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
import Hero from "../components/Hero.astro";
import Fortsat from "../components/Fortsat.astro";
import Favoritter from "../components/Favoritter.astro";
import Jul from "../components/Jul.astro";
import Video from "../components/Video.astro";
import Venskaber from "../components/Venskaber.astro";
import Sjov from "../components/Sjov.astro";
import MigFam from "../components/MigFam.astro";
import App from "../components/App.astro";
---

<MainLayout title="Børnebiffen">
  <article>
    <h1>Index overskrift</h1>
    <Button>Klik!</Button>
    <p>
      Link til <Link href="https://www.kea.dk" target="_blank"
        >En anden side</Link
      >
    </p>
    <Image src={thumbsup} alt="" />
  </article>

  <Heading htmlheading="h1" size="large">Dette er et eksempel på H1</Heading>
  <Heading htmlheading="h2" size="medium">Dette er et eksempel på H2</Heading>
  <Heading htmlheading="h3" size="small">Dette er et eksempel på H3</Heading>
  <Heading htmlheading="h4" size="xsmall">Dette er et eksempel på H4</Heading>
  <Text teksttype="brødtekst ">
    Dette er et eksempel på brødtekst. Lorem ipsum dolor sit amet, consectetur
    adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna
    aliqua.
  </Text>
  <Text teksttype="fedbrødtekst" stylingclasses=" text-green-400">
    Dette er et eksempel på fedbrødtekst. Lorem ipsum dolor sit amet,
    consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et
    dolore magna aliqua.
  </Text>

  <!-- ***************************** Start Header (kraftig rød) ***************************** -->
  <section
    class="bg-[var(--color-purple-950)] text-red-700 rounded-lg p-6 mb-6"
  >
    <p>Hero</p>
    <Hero />
  </section>
  <!-- ***************************** Slut Header ***************************** -->

  <!-- ***************************** Start Forsæt med at se (kraftig orange) ***************************** -->
  <section class="bg-orange-300 rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Forsæt med at se </Heading>
    <Fortsat />
  </section>
  <!-- ***************************** Slut Forsæt med at se ***************************** -->

  <!-- ***************************** Start Ugens favoritter (kraftig gul) ***************************** -->
  <section class="bg-yellow-300 rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Ugens favoritter</Heading>
    <Favoritter />
  </section>
  <!-- ***************************** Slut Ugens favoritter ***************************** -->

  <!-- ***************************** Start Udforsk vores juleunivers (kraftig grøn) ***************************** -->
  <section class="bg-green-300 text-green-500 rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Udforsk vores juleunivers</Heading>
    <Jul />
  </section>
  <!-- ***************************** Slut Udforsk vores juleunivers ***************************** -->

  <!-- ***************************** Start Video (kraftig cyan) ***************************** -->
  <section class="bg-cyan-300 rounded-lg p-6 mb-6">
    <p>Video</p>
    <Video />
  </section>
  <!-- ***************************** Slut Video ***************************** -->

  <!-- ***************************** Start Venskaber (kraftig blå) ***************************** -->
  <section class="bg-blue-400 text-white rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Venskaber</Heading>
    <Venskaber />
  </section>
  <!-- ***************************** Slut Venskaber ***************************** -->

  <!-- ***************************** Start Sjov og ballade (kraftig indigo) ***************************** -->
  <section class="bg-indigo-400 text-white rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Sjov og ballade</Heading>
    <Sjov />
  </section>
  <!-- ***************************** Slut Sjov og ballade ***************************** -->

  <!-- ***************************** Start Mig og min familie (kraftig violet) ***************************** -->
  <section class="bg-violet-400 text-white rounded-lg p-6 mb-6">
    <Heading htmlheading="h2" size="medium">Mig og min familie</Heading>
    <MigFam />
  </section>
  <!-- ***************************** Slut Mig og min familie ***************************** -->

  <!-- ***************************** Start Billede (kraftig lilla) ***************************** -->
  <section class="bg-purple-400 text-white rounded-lg p-6 mb-6">
    <p>Billede</p>
    <img src="/img/går-sammen.svg" alt="" />
  </section>
  <!-- ***************************** Slut Billede Sektion ***************************** -->

  <!-- ***************************** Start App Sektion (kraftig pink) ***************************** -->
  <section class="bg-pink-400 text-white rounded-lg p-6 mb-6">
    <p>App</p>
    <App />
  </section>
  <!-- ***************************** Slut App Sektion ***************************** -->
</MainLayout>
