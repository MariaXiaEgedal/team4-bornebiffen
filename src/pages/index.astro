---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
import Hero from "../components/Hero.astro";
import Video from "../components/Video.astro";
import App from "../components/App.astro";
import Card from "../components/Card.astro";
import CardCarousel from "../components/CardCarousel.astro";
---

<MainLayout title="Børnebiffen">
  <!-- ***************************** Start Header ***************************** -->
  <section>
    <Hero />
  </section>
  <!-- ***************************** Slut Header ***************************** -->

  <!-- ***************************** Start Forsæt med at se ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <Heading htmlheading="h2" size="medium">Forsæt med at se</Heading>

    <div class="grid gap-6 grid-cols-2 lg:grid-cols-3">
      <Card
        url="/singleview"
        cardimage="/img/rita1.webp"
        cardimagealt="Rita og Krokodille: Skovturen"
        cardtitel="Rita og Krokodille: Skovturen"
        cardtime="5 min"
        progress={25}
      />

      <Card
        url="/singleview"
        cardimage="/img/venskaber2.webp"
        cardimagealt="Lillefinger - Min bedste ven"
        cardtitel="Lillefinger - Min bedste ven"
        cardtime="5 min"
        progress={60}
      />
    </div>
  </section>
  <!-- ***************************** Slut Forsæt med at se ***************************** -->

  <!-- ***************************** Start Ugens favoritter (kraftig gul) ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <Heading htmlheading="h2" size="medium">Ugens favoritter</Heading>

    <div class="grid gap-6 grid-cols-3 auto-rows-auto">
      <Card
        url="/singleview"
        cardimage="/img/vitello.webp"
        cardimagealt="Vitello får en klam kæreste"
        cardtitel="Vitello får en klam kæreste"
        cardtime="5 min"
        rank={1}
      />
      <Card
        url="/singleview"
        cardimage="/img/orla.webp"
        cardimagealt="Orla Frøsnapper"
        cardtitel="Orla Frøsnapper"
        cardtime="12 min"
        rank={2}
      />
      <Card
        url="/singleview"
        cardimage="/img/rita1.webp"
        cardimagealt="Rita og Krokodille: Zoo"
        cardtitel="Rita og Krokodille: Zoo"
        cardtime="5 min"
        rank={3}
      />
    </div>
  </section>
  <!-- ***************************** Slut Ugens favoritter ***************************** -->

  <!-- ***************************** Start Udforsk vores juleunivers ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Udforsk vores juleunivers"
      bg="bg-red-500"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/jul1.webp",
          cardimagealt: "Rita og Krokodille: Jul",
          cardtitel: "Rita og Krokodille: Jul",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/jul2.webp",
          cardimagealt: "Jagten på julemanden",
          cardtitel: "Jagten på julemanden",
          cardtime: "17 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/jul3.webp",
          cardimagealt: "Cirkeline: Højt fra træets grønne top",
          cardtitel: "Cirkeline: Højt fra træets grønne top",
          cardtime: "14 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/jul4.webp",
          cardimagealt: "Vitello køber en vidunderlig julegave",
          cardtitel: "Vitello køber en vidunderlig julegave",
          cardtime: "7 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/jul5.webp",
          cardimagealt: "Lillefinger - Lillebror",
          cardtitel: "Lillefinger - Lillebror",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/jul6.webp",
          cardimagealt: "Hunden Ib 6:10 - Hunden Ib holder lillejuleaften",
          cardtitel: "Hunden Ib 6:10 - Hunden Ib holder lillejuleaften",
          cardtime: "4 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Udforsk vores juleunivers ***************************** -->

  <!-- ***************************** Start Video (kraftig cyan) ***************************** -->
  <section class="pt-[40px] md:pt-[80px]">
    <Video />
  </section>
  <!-- ***************************** Slut Video ***************************** -->

  <!-- ***************************** Start Venskaber ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Venskaber"
      bg="bg-green-300"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/venskaber1.webp",
          cardimagealt: "Dyrevennerne: Min ven Lauge",
          cardtitel: "Dyrevennerne: Min ven Lauge",
          cardtime: "12 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber2.webp",
          cardimagealt: "Lillefinger: Min bedste ven",
          cardtitel: "Lillefinger: Min bedste ven",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber3.webp",
          cardimagealt: "Min lille hund Mester 4:10 - En ven på besøg",
          cardtitel: "Min lille hund Mester 4:10 - En ven på besøg",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber4.webp",
          cardimagealt: "Hvis ven?",
          cardtitel: "Hvis ven?",
          cardtime: " min",
        },

        {
          url: "/singleview",
          cardimage: "/img/venskaber5.webp",
          cardimagealt: "Vuf - en ny ven",
          cardtitel: "Vuf - en ny ven",
          cardtime: "6 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber6.webp",
          cardimagealt: "Alma flytter på landet: Min gode gamle ven",
          cardtitel: "Alma flytter på landet: Min gode gamle ven",
          cardtime: "10 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Venskaber ***************************** -->

  <!-- ***************************** Start Sjov og ballade ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Sjov og ballade"
      bg="bg-orange-400"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/sjov1.webp",
          cardimagealt: "Mortens badebold",
          cardtitel: "Mortens badebold",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov2.webp",
          cardimagealt: "Cirkeline: Storbyens mus",
          cardtitel: "Cirkeline: Storbyens mus",
          cardtime: "12 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov3.webp",
          cardimagealt: "Blæksprutte",
          cardtitel: "Blæksprutte",
          cardtime: "4 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov4.webp",
          cardimagealt: "Rollinger-Raketten",
          cardtitel: "Rollinger-Raketten",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov5.webp",
          cardimagealt: "Lili bliver vred",
          cardtitel: "Lili bliver vred",
          cardtime: "3 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov6.webp",
          cardimagealt: "Dyrevennerne: Jeg stikker af!",
          cardtitel: "Dyrevennerne: Jeg stikker af!",
          cardtime: "12 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Sjov og ballade ***************************** -->

  <!-- ***************************** Start Mig og min familie  ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Mig og min familie"
      bg="bg-pink-300"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/familie1.webp",
          cardimagealt: "Mig og min familie: Danni",
          cardtitel: "Mig og min familie: Danni",
          cardtime: "15 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie2.webp",
          cardimagealt: "På tur med far: Lillesøster Lucia 5:6",
          cardtitel: "På tur med far: Lillesøster Lucia 5:6",
          cardtime: "19 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie3.webp",
          cardimagealt: "Lille frø",
          cardtitel: "Lille frø",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie4.webp",
          cardimagealt: "Mig og min familie: Ronja",
          cardtitel: "Mig og min familie: Ronja",
          cardtime: "14 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie5.webp",
          cardimagealt: "Planeten Willi",
          cardtitel: "Planeten Willi",
          cardtime: "10 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie6.webp",
          cardimagealt: "Min flyvende mor",
          cardtitel: "Min flyvende mor",
          cardtime: "7 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Mig og min familie ***************************** -->

  <!-- ***************************** Start Billede (kraftig lilla) ***************************** -->
  <section
    class="flex items-center justify-center px-[20px] md:px-[100px] pt-[40px] md:pt-[80px]"
  >
    <img src="/img/går-sammen.svg" alt="Går sammen" />
  </section>
  <!-- ***************************** Slut Billede Sektion ***************************** -->

  <!-- ***************************** Start App Sektion (kraftig pink) ***************************** -->
  <section class="bg-pink-400 py-[40px] md:py-[80px]">
    <p>App</p>
    <App />
  </section>
  <!-- ***************************** Slut App Sektion ***************************** -->
</MainLayout>
