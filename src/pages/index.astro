---
import MainLayout from "../layouts/MainLayout.astro";
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
import Hero from "../components/Hero.astro";
import Hero2 from "../components/Hero2.astro";
import Card from "../components/Card.astro";
import CardCarousel from "../components/CardCarousel.astro";
---

<MainLayout title="Børnebiffen">
  <!-- ***************************** Start Hero ***************************** -->
  <section>
    <!-- <Hero /> -->
    <Hero2 />
  </section>
  <!-- ***************************** Slut Hero ***************************** -->

  <!-- ***************************** Start Forsæt med at se ***************************** -->
  <section
    class="px-[20px] md:px-[50px] lg:px-[100px] md:-mt-20 lg:mt-15 pt-[40px] md:pt-[80px]"
  >
    <Heading htmlheading="h2" size="medium">Forsæt med at se</Heading>

    <div class="mt-[10px] grid gap-6 grid-cols-2 lg:grid-cols-3">
      <Card
        url="/singleview"
        cardimage="/img/rita1.webp"
        cardimagealt="Rita og Krokodille: Skovturen"
        cardtitel="Rita og Krokodille: Skovturen"
        cardtime="5 min"
        progress={25}
      />

      <Card
        url="/singleview"
        cardimage="/img/venskaber2.webp"
        cardimagealt="Lillefinger - Min bedste ven"
        cardtitel="Lillefinger - Min bedste ven"
        cardtime="5 min"
        progress={60}
      />
    </div>
  </section>
  <!-- ***************************** Slut Forsæt med at se ***************************** -->

  <!-- ***************************** Start Ugens favoritter ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <Heading htmlheading="h2" size="medium">Ugens favoritter</Heading>

    <!-- mobile: horisontal scroll (to kort + del af tredje). md+: grid -->
    <div
      class="mt-[10px] flex gap-[10px] overflow-x-auto snap-x snap-mandatory md:grid md:grid-cols-3 md:gap-[20px]"
    >
      <div class="snap-start flex-shrink-0 w-[44%] md:w-auto">
        <Card
          url="/singleview"
          cardimage="/img/vitello.webp"
          cardimagealt="Vitello får en klam kæreste"
          cardtitel="Vitello får en klam kæreste"
          cardtime="5 min"
          rank={1}
        />
      </div>

      <div class="snap-start flex-shrink-0 w-[44%] md:w-auto">
        <Card
          url="/singleview"
          cardimage="/img/orla.webp"
          cardimagealt="Orla Frøsnapper"
          cardtitel="Orla Frøsnapper"
          cardtime="12 min"
          rank={2}
        />
      </div>

      <div class="snap-start flex-shrink-0 w-[44%] md:w-auto">
        <Card
          url="/singleview"
          cardimage="/img/rita1.webp"
          cardimagealt="Rita og Krokodille: Zoo"
          cardtitel="Rita og Krokodille: Zoo"
          cardtime="5 min"
          rank={3}
        />
      </div>
    </div>
  </section>
  <!-- ***************************** Slut Ugens favoritter ***************************** -->

  <!-- ***************************** Start Udforsk vores juleunivers ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <div class="relative">
      <img
        src="/img/julepynt.svg"
        alt=""
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 w-full h-full object-contain z-40 hidden md:block"
      />
      <img
        src="/img/snefnug.svg"
        alt=""
        aria-hidden="true"
        class="pointer-events-none absolute inset-0 w-full h-full object-contain z-40 block md:hidden"
      />
      <div class="relative z-10">
        <CardCarousel
          titel="Udforsk vores juleunivers"
          bg="bg-red-500"
          cards={[
            {
              url: "/singleview",
              cardimage: "/img/jul1.webp",
              cardimagealt: "Rita og Krokodille: Jul",
              cardtitel: "Rita og Krokodille: Jul",
              cardtime: "5 min",
            },
            {
              url: "/singleview",
              cardimage: "/img/jul2.webp",
              cardimagealt: "Jagten på julemanden",
              cardtitel: "Jagten på julemanden",
              cardtime: "17 min",
            },
            {
              url: "/singleview",
              cardimage: "/img/jul3.webp",
              cardimagealt: "Cirkeline: Højt fra træets grønne top",
              cardtitel: "Cirkeline: Højt fra træets grønne top",
              cardtime: "14 min",
            },
            {
              url: "/singleview",
              cardimage: "/img/jul4.webp",
              cardimagealt: "Vitello køber en vidunderlig julegave",
              cardtitel: "Vitello køber en vidunderlig julegave",
              cardtime: "7 min",
            },
            {
              url: "/singleview",
              cardimage: "/img/jul5.webp",
              cardimagealt: "Lillefinger - Lillebror",
              cardtitel: "Lillefinger - Lillebror",
              cardtime: "5 min",
            },
            {
              url: "/singleview",
              cardimage: "/img/jul6.webp",
              cardimagealt: "Hunden Ib 6:10 - Hunden Ib holder lillejuleaften",
              cardtitel: "Hunden Ib 6:10 - Hunden Ib holder lillejuleaften",
              cardtime: "4 min",
            },
          ]}
        />
      </div>
    </div>
  </section>
  <!-- ***************************** Slut Udforsk vores juleunivers ***************************** -->

  <!-- ***************************** Start Video ***************************** -->
  <section class="pt-[40px] md:pt-[80px] px-0 md:px-[50px] lg:px-[100px]">
    <div class="w-full box-border">
      <div
        class="relative w-full md:overflow-hidden md:rounded-[20px] lg:rounded-[20px]"
      >
        <video
          class="w-full h-auto block"
          src="/img/ritavideo.mov"
          autoplay
          loop
          playsinline
          muted></video>

        <div
          class="absolute z-10 pointer-events-none
                 top-4 left-4 md:top-6 md:left-6 lg:top-8 lg:left-8
                 flex flex-col items-start gap-6 md:gap-5 lg:gap-8"
        >
          <Heading
            htmlheading="h2"
            size="medium"
            stylingclasses="text-[var(--redtext)]"
          >
            Rita og krokodillen
          </Heading>

          <a
            href="/singleview"
            class="pointer-events-auto inline-block"
            aria-label="Åbn single view"
          >
            <img
              src="/img/playbutton.svg"
              alt="afspil"
              class="w-14 h-14 md:w-16 md:h-16 lg:w-20 lg:h-20 justify-self-start transition-transform duration-200 ease-out hover:scale-110 active:scale-95"
            />
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- ***************************** Slut Video ***************************** -->

  <!-- ***************************** Start Venskaber ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Venskaber"
      bg="bg-green-300"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/venskaber1.webp",
          cardimagealt: "Dyrevennerne: Min ven Lauge",
          cardtitel: "Dyrevennerne: Min ven Lauge",
          cardtime: "12 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber2.webp",
          cardimagealt: "Lillefinger: Min bedste ven",
          cardtitel: "Lillefinger: Min bedste ven",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber3.webp",
          cardimagealt: "Min lille hund Mester 4:10 - En ven på besøg",
          cardtitel: "Min lille hund Mester 4:10 - En ven på besøg",
          cardtime: "5 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber4.webp",
          cardimagealt: "Hvis ven?",
          cardtitel: "Hvis ven?",
          cardtime: " min",
        },

        {
          url: "/singleview",
          cardimage: "/img/venskaber5.webp",
          cardimagealt: "Vuf - en ny ven",
          cardtitel: "Vuf - en ny ven",
          cardtime: "6 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/venskaber6.webp",
          cardimagealt: "Alma flytter på landet: Min gode gamle ven",
          cardtitel: "Alma flytter på landet: Min gode gamle ven",
          cardtime: "10 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Venskaber ***************************** -->

  <!-- ***************************** Start Sjov og ballade ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Sjov og ballade"
      bg="bg-orange-400"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/sjov1.webp",
          cardimagealt: "Mortens badebold",
          cardtitel: "Mortens badebold",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov2.webp",
          cardimagealt: "Cirkeline: Storbyens mus",
          cardtitel: "Cirkeline: Storbyens mus",
          cardtime: "12 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov3.webp",
          cardimagealt: "Blæksprutte",
          cardtitel: "Blæksprutte",
          cardtime: "4 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov4.webp",
          cardimagealt: "Rollinger-Raketten",
          cardtitel: "Rollinger-Raketten",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov5.webp",
          cardimagealt: "Lili bliver vred",
          cardtitel: "Lili bliver vred",
          cardtime: "3 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/sjov6.webp",
          cardimagealt: "Dyrevennerne: Jeg stikker af!",
          cardtitel: "Dyrevennerne: Jeg stikker af!",
          cardtime: "12 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Sjov og ballade ***************************** -->

  <!-- ***************************** Start Mig og min familie  ***************************** -->
  <section class="px-[20px] md:px-[50px] lg:px-[100px] pt-[40px] md:pt-[80px]">
    <CardCarousel
      titel="Mig og min familie"
      bg="bg-pink-300"
      cards={[
        {
          url: "/singleview",
          cardimage: "/img/familie1.webp",
          cardimagealt: "Mig og min familie: Danni",
          cardtitel: "Mig og min familie: Danni",
          cardtime: "15 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie2.webp",
          cardimagealt: "På tur med far: Lillesøster Lucia 5:6",
          cardtitel: "På tur med far: Lillesøster Lucia 5:6",
          cardtime: "19 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie3.webp",
          cardimagealt: "Lille frø",
          cardtitel: "Lille frø",
          cardtime: "8 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie4.webp",
          cardimagealt: "Mig og min familie: Ronja",
          cardtitel: "Mig og min familie: Ronja",
          cardtime: "14 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie5.webp",
          cardimagealt: "Planeten Willi",
          cardtitel: "Planeten Willi",
          cardtime: "10 min",
        },
        {
          url: "/singleview",
          cardimage: "/img/familie6.webp",
          cardimagealt: "Min flyvende mor",
          cardtitel: "Min flyvende mor",
          cardtime: "7 min",
        },
      ]}
    />
  </section>
  <!-- ***************************** Slut Mig og min familie ***************************** -->

  <!-- ***************************** Start Billede ***************************** -->
  <section
    class="flex items-center justify-center px-[20px] md:px-[100px] pt-[40px] md:pt-[80px]"
  >
    <img src="/img/går-sammen.svg" alt="Går sammen" />
  </section>
  <!-- ***************************** Slut Billede Sektion ***************************** -->

  <!-- ***************************** Start App Sektion ***************************** -->
  <section
    class="my-[40px] md:my-[80px] px-[20px] md:px-[50px] lg:px-[100px] py-[40px] md:py-[80px] w-full bg-[var(--color-green-300)]"
  >
    <div
      class="md:px-[50px] lg:px-[100px] flex flex-col gap-8 lg:grid lg:grid-cols-2 lg:items-center lg:gap-12"
    >
      <!-- BILLEDE -->
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <img
          src="/img/appbillede.svg"
          alt="Børnebiffen app på telefon og tablet"
          class="w-full max-w-sm lg:max-w-md drop-shadow-lg"
        />
      </div>

      <!-- TEKST -->
      <div class="order-2 lg:order-1 text-[var(--base-black)]">
        <Text teksttype="fedbrødtekst" stylingclasses="mb-5">
          Hent Børnebiffen-appen og se film med de yngste</Text
        >

        <Text teksttype="brødtekst" stylingclasses="mb-5">
          Download Børnebiffen-appen i din app store, og få adgang til vores
          udvalg af trygge og håndplukkede kortfilm til børn i alderen 2-6 år.</Text
        >

        <Text teksttype="brødtekst" stylingclasses="mb-5">
          Appen er udviklet til både smartphones og tablets, så børn og voksne
          nemt kan se film sammen.</Text
        >

        <Text teksttype="brødtekst" stylingclass="">
          Du kan hente appen til både Android og iOS.</Text
        >

        <!-- APP STORE-BADGES -->
        <div class="flex flex-row flex-wrap gap-4 mt-5">
          <a
            href="#"
            class="inline-block transition-transform duration-200 hover:scale-105"
          >
            <img
              src="/img/appstoreknap.svg"
              alt="Hent i App Store"
              class="h-12 lg:h-14 w-auto"
            />
          </a>

          <a
            href="#"
            class="inline-block transition-transform duration-200 hover:scale-105"
          >
            <img
              src="/img/googleplayknap.svg"
              alt="Get it on Google Play"
              class="h-12 lg:h-14 w-auto"
            />
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- ***************************** Slut App Sektion ***************************** -->
</MainLayout>
