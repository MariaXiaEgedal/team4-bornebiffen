      </div>
      
    </div>
  </div>

  <!-- gardinerne i siderne -->
  <div
    class="absolute left-1/2 top-0 transform -translate-x-1/2 w-screen z-40 pointer-events-none hidden sm:block"
  >
    <img
      src="/img/gardin.png"
      alt="Left curtain"
      aria-hidden="true"
      class="w-screen h-auto object-contain object-left"
    />
  </div>
</div>

<style>
  
  .hero-slider-viewport {
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none; /
    scrollbar-width: none; /* Firefox: fjern scrollbar */
    overflow-y: hidden; /* s√∏rg for ingen vertikal scroll */
  }

  .hero-slider-viewport::-webkit-scrollbar {
    display: none; /* Safari and Chrome: fjern scrollbar */
  }

  .hero-slide-item {
    object-fit: cover;
    display: block;
  }

  /* class applied by JS when a slide is centered */
  .hero-slide-item.is-center {
    transform: scale(1.28);
  }
  /* slight enlarge on hover for non-centered slides */
  .hero-slide-item:not(.is-center):hover {
    transform: scale(1.08);
  }
  .hero-slide-item {
    width: 100px;
    height: 100px;
    transition: transform 0.3s ease;
    scroll-snap-align: center;
    flex-shrink: 0;
    border-radius: 9999px; /* make round */
  }

  @media (min-width: 640px) {
    .hero-slider-wrapper {
      bottom: 20px;
    }
    .hero-slider-track {
      gap: 60px;
    }
    .hero-slide-item {
      width: 120px;
      height: 120px;
    }
    .hero-slider-viewport {
      height: 150px;
    }
  }

  @media (min-width: 1024px) {
    .hero-slide-item {
      width: 180px;
      height: 180px;
    }
  }

 
</style>

