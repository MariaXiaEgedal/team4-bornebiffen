---
import Text from "../components/Text.astro";
import Heading from "../components/Heading.astro";
---

<header
  class="flex items-center py-5 px-6 bg-[var(--color-red-700)] text-[var(--base-white)] relative"
>
  <!-- Logo -->
  <a href="/" class="z-40">
    <img src="/img/hvidlogo.svg" alt="Børnebiffen logo" class="h-16 w-auto" />
  </a>

  <!-- Desktop menu -->
  <nav class="hidden lg:flex gap-10 ml-auto items-center text-xl">
    <a href="/listview" class="hover:underline">Alle film</a>
    <a
      href="#"
      data-open-login
      class="flex items-center gap-2 hover:underline cursor-pointer"
    >
      <img src="/img/lock.svg" alt="lockicon" class="h-5 w-auto" />
      Log ind
    </a>
    <a href="/listview" class="flex items-center gap-2 hover:underline">
      <img src="/img/loop.svg" alt="loopicon" class="h-5 w-auto" />
      Søg
    </a>
  </nav>

  <!-- Burger menu i -->
  <button
    id="burgerBtn"
    class="ml-auto lg:hidden z-50 flex flex-col items-center gap-1.5 w-9 h-9"
    aria-label="Menu"
  >
    <span
      class="block w-6 h-0.5 bg-white transition-transform duration-300 origin-center"
    ></span>
    <span class="block w-6 h-0.5 bg-white transition-opacity duration-300"
    ></span>
    <span
      class="block w-6 h-0.5 bg-white transition-transform duration-300 origin-center"
    ></span>
  </button>
</header>

<!-- drop down Mobil menu -->
<div
  id="mobileMenu"
  class="fixed inset-x-0 top-0 bg-[var(--color-red-700)] text-[var(--base-white)] -translate-y-full transform transition-transform duration-500 ease-in-out flex flex-col pt-8 z-42 lg:hidden h-[75vh] overflow-y-auto"
>
  <div class="flex justify-between items-start px-6">
    <img src="/img/hvidlogo.svg" alt="Børnebiffen logo" class="h-16 w-auto" />
  </div>
  <nav class="flex flex-col items-center gap-10 mt-20 text-3xl">
    <a href="/listview" class="hover:underline">Alle film</a>
    <a
      href="#"
      data-open-login
      class="flex items-center gap-3 hover:underline cursor-pointer"
    >
      <img src="/img/lock.svg" alt="lockicon" class="h-6 w-auto" />
      Log ind
    </a>
    <a href="/listview" class="flex items-center gap-3 hover:underline">
      <img src="/img/loop.svg" alt="loopicon" class="h-6 w-auto" />
      Søg
    </a>
  </nav>
</div>

<!-- Login modal -->
<div
  id="loginModalOverlay"
  class="fixed inset-0 bg-[var(--base-black/50)] backdrop-blur-sm hidden justify-center items-center z-50"
>
  <div
    class="bg-[var(--base-white)] rounded-xl border-4 border-[var(--primary-blue)] p-6 sm:p-7 w-[90%] max-w-md sm:max-w-lg relative"
  >
    <button
      id="closeLoginModal"
      class="absolute top-4 right-4 text-[var(--primary-blue)] hover:text-[var(--color-blue-700)] transition"
      aria-label="Luk login"
    >
      <img
        src="/img/blaakryds.svg"
        alt="Luk"
        class="w-8 h-8 transition-transform duration-300 hover:scale-150"
      />
    </button>
    <div class="grid grid-cols-2 gap-3 sm:gap-5 items-center">
      <div>
        <!-- Brug Heading-komponenten -->
        <Heading
          htmlheading="h4"
          size="medium"
          stylingclasses="text-[var(--primary-blue)] mb-3"
        >
          Log ind
        </Heading>

        <!-- Brug Text-komponenten -->
        <Text
          teksttype="brødtekst"
          stylingclasses="text-base sm:text-lg text-[var(--base-black)] mb-5 leading-snug"
        >
          Brug dit bibliotekslogin <br /> til at se alle vores film.
        </Text>

        <button
          class="inline-flex items-center gap-2 bg-[var(--primary-blue)] hover:bg-[var(--color-blue-700)] text-[var(--base-black)] font-bold rounded-xl px-4 py-3 text-sm sm:text-lg transition"
        >
          <img src="/img/blacklock.svg" alt="lockicon" class="h-5 w-auto" />
          Log ind
        </button>
      </div>
      <div class="flex justify-center">
        <img
          src="/img/logindbamse.webp"
          alt="Bamse med popcorn"
          class="w-28 sm:w-32 md:w-40"
        />
      </div>
    </div>
  </div>
</div>
<script>
  // Funktion til at toggle klasser
  const toggleClass = (element, className, condition) => {
    element?.classList.toggle(className, condition);
  };

  // Burger menu toggle
  const burgerBtn = document.getElementById("burgerBtn");
  const mobileMenu = document.getElementById("mobileMenu");

  burgerBtn?.addEventListener("click", () => {
    const menuOpen = mobileMenu.classList.contains("translate-y-0");
    toggleClass(mobileMenu, "-translate-y-full", menuOpen);
    toggleClass(mobileMenu, "translate-y-0", !menuOpen);
    toggleClass(document.body, "overflow-hidden", !menuOpen);

    // Animér burger-menuen
    const [top, middle, bottom] = burgerBtn.children;
    toggleClass(top, "translate-y-2", !menuOpen);
    toggleClass(top, "rotate-45", !menuOpen);
    toggleClass(middle, "opacity-0", !menuOpen);
    toggleClass(bottom, "-translate-y-2", !menuOpen);
    toggleClass(bottom, "-rotate-45", !menuOpen);
  });

  // Login modal toggle
  const loginModalOverlay = document.getElementById("loginModalOverlay");
  const closeLoginModal = document.getElementById("closeLoginModal");
  const loginTriggers = document.querySelectorAll("[data-open-login]");

  const toggleLoginModal = (show) => {
    toggleClass(loginModalOverlay, "hidden", !show);
    toggleClass(loginModalOverlay, "flex", show);
    toggleClass(document.body, "overflow-hidden", show);
  };

  loginTriggers.forEach((trigger) =>
    trigger.addEventListener("click", (e) => {
      e.preventDefault();
      toggleLoginModal(true);
    })
  );

  closeLoginModal?.addEventListener("click", () => toggleLoginModal(false));

  loginModalOverlay?.addEventListener("click", (e) => {
    if (e.target === loginModalOverlay) toggleLoginModal(false);
  });
</script>
