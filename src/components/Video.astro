---
import Heading from "./Heading.astro";
---

<div class="w-full box-border mt-4 mb-4 px-0 md:px-[100px]">
  <div class="relative w-full">
    <video
      class="w-full h-auto block rounded-md"
      src="/img/ritavideo.mov"
      autoplay
      loop
      playsinline
      muted></video>

    <div
      class="absolute top-4 left-4 md:top-6 md:left-6 z-10 flex flex-col gap-2 md:gap-3 items-start pointer-events-none"
    >
      <Heading
        htmlheading="h2"
        size="medium"
        stylingclasses="text-[var(--redtext)]"
      >
        Rita og krokodillen
      </Heading>
      <button class="pointer-events-auto flex items-center justify-center">
        <img
          src="/img/playbutton.svg"
          alt="afspil"
          class="w-9 h-9 md:w-20 md:h-20 md:mt-15"
        />
      </button>
    </div>
  </div>
</div>
